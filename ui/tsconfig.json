{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    // Damit React-Default-Imports und CommonJS-Typen sauber laufen:
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Vitest-Globals und Vite-API:
    "types": [
      "node",
      "vite/client",
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "vitest.config.ts"
  ]
}
