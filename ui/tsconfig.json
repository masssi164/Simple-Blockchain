{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "verbatimModuleSyntax": true,   // => „type-only imports“ nötig
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitest/globals"],
  },
  "include": ["src"]
}
